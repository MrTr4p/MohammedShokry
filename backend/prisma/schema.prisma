generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model AnotherPaymentsBill {
  id Int @id @default(autoincrement())
}

model ProjectBill {
  id               String       @id @map("_id")
  Name             String       @unique
  ClientName       String       
  ClientAddress    String
  Workers          WorkerBill[]
  WorkerPrecentage Int
  Revenues         Revenues[]
  Exposes          Exposes[]
}

model WorkerBill {
  id         String  @id @map("_id")
  WorkerName String
  Salary     Int
  Date       String
  Work       String
  Project    ProjectBill @relation(fields: [ProjectId], references: [id])
  ProjectId  String  @unique
}

model Revenues {
  id        String  @id @map("_id")
  Amount    String
  Date      String
  Project   ProjectBill @relation(fields: [ProjectId], references: [id])
  ProjectId String  @unique
}

model Exposes {
  id           String  @id @map("_id")
  MaterialName String
  Date         String
  Cost         String
  BillCode     String
  Project      ProjectBill @relation(fields: [ProjectId], references: [id])
  ProjectId    String  @unique
}

