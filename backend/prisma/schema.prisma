// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model AnotherPaymentsBill {
  id          Int      @id @default(autoincrement())
  name        String?
  amount      Int
  date        DateTime
  inReturn    String
  description String?
}

model ProjectBill {
  id               Int        @id @default(autoincrement())
  name             String     @unique
  officePrecentage Int
  date             DateTime
  workers          Worker[]
  revenues         Revenue[]
  expenses         Expenses[]
  clientName       String
  clientAddress    String
}

model Worker {
  id               Int         @id @default(autoincrement())
  workerName       String
  salary           Int
  precentage       Int?
  salaryPrecentage Int
  date             DateTime
  work             String
  projectName      String
  projects         ProjectBill @relation(fields: [projectId], references: [id])
  projectId        Int
}

model Revenue {
  id     Int      @id @default(autoincrement())
  amount Int
  date   DateTime

  ProjectBill   ProjectBill @relation(fields: [projectBillId], references: [id])
  projectBillId Int
}

model Expenses {
  id            Int          @id @default(autoincrement())
  materialName  String
  date          DateTime
  totalcost     Int
  billCode      String?
  day           String
  ProjectBill   ProjectBill? @relation(fields: [projectBillId], references: [id])
  projectBillId Int?
}

