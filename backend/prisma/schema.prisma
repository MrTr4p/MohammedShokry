// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "file:./dev.db"
}

model AnotherPaymentsBill {
  id          Int     @id @default(autoincrement())
  name        String?
  amount      Int
  date        String
  inReturn    String
  description String?
}

model ProjectBill {
  id   Int    @id @default(autoincrement())
  name String @unique
  workers  Worker[]
  revenues Revenue[]
  exposes  Exposes[]
  Client   Client?   @relation(fields: [clientId], references: [id])
  clientId Int?
}

model Worker {
  id          Int           @id @default(autoincrement())
  workerName  String
  salary      Int
  date        String
  work        String
  projectName String
  projects    ProjectBill @relation(fields: [projectId], references: [id])
  projectId   Int
}

model Revenue {
  id     Int    @id @default(autoincrement())
  amount Int
  date   String

  ProjectBill   ProjectBill? @relation(fields: [projectBillId], references: [id])
  projectBillId Int?
}

model Exposes {
  id           Int    @id @default(autoincrement())
  materialName String
  date         String
  totalcost    String
  billCode     String

  ProjectBill   ProjectBill? @relation(fields: [projectBillId], references: [id])
  projectBillId Int?
}

model Client {
  id      Int    @id @default(autoincrement())
  name    String
  address String

  projects ProjectBill[]
}
