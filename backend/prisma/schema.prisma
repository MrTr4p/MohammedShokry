generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model AnotherPaymentsBill {
  id Int @id @default(autoincrement())
}

model ProjectBill {
  id               String       @id @map("_id")
  name             String       @unique
  clientName       String       
  clientAddress    String
  workers          WorkerBill[]
  workerPrecentage Int
  revenues         Revenues[]
  exposes          Exposes[]
}

model WorkerBill {
  id         String  @id @map("_id")
  workerName String
  salary     Int
  date       String
  work       String
  project    ProjectBill @relation(fields: [projectId], references: [id])
  projectId  String  @unique
}

model Revenues {
  id        String  @id @map("_id")
  amount    String
  date      String
  project    ProjectBill @relation(fields: [projectId], references: [id])
  projectId  String  @unique
}

model Exposes {
  id           String  @id @map("_id")
  materialName String
  date         String
  cost         String
  billCode     String
  project    ProjectBill @relation(fields: [projectId], references: [id])
  projectId  String  @unique
}

